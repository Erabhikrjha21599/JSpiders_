package downCasting;

/**
 * 
 */
public class Banana extends Fruit {

	int bn_price = 56;
	
	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Banana b = new Banana();
		
		System.out.println(b.bn_price);
		System.out.println(b.ft_price);
		
		Fruit f1 = new Banana(); // up casting 
		
		if(f1 instanceof Banana) {
			Banana b1 = (Banana) f1;
			
		}else if(f1 instanceof Apple){
			Apple a1 = (Apple) f1;
			
		}
		

	}

}
